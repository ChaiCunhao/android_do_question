<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".BeforeQuestion">

    <TextView
        android:id="@+id/before_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/before_title" />

    <TextView
        android:id="@+id/before_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView" />

    <Button
        android:id="@+id/start_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/start_question" />

    <Button
        android:id="@+id/reset_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/reset_question" />
</LinearLayout>